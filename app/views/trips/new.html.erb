<div class="new-trip">
  <div class="col-md-6 mx-auto">
    <h1>New Trip</h1>
    <%= simple_form_for @trip do |form| %>
      <%= form.input :title %>
      <%= form.input :destination %>
      <%= form.input :country, as: :string %>
      <%= form.input :start_date %>
      <%= form.input :end_date %>
      <%= form.submit %>
    <% end %>
    <%= link_to "Back", trips_path %>
  </div>
</div>
