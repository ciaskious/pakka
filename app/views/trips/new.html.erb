<div class="new-trip-container">
  <!-- Header Section -->
  <div class="trip-form-header">
    <div class="container">
      <h1 class="trip-form-title">Plan New Trip</h1>
      <p class="trip-form-subtitle">Fill in your trip details to get started</p>
    </div>
  </div>


  <!-- Form Section -->
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="trip-form-card card shadow-sm border-0 p-4">
          <%= simple_form_for @trip, html: { class: "trip-form" } do |form| %>
            <div class="row g-4">
              <div class="col-md-6">
                <%= form.input :title,
                  label: "Trip Name",
                  wrapper_html: { class: "mb-3" },
                  input_html: {
                    class: "form-control-lg",
                    style: "font-family: 'DM Sans', sans-serif;",
                    placeholder: "e.g.: Summer Beach Vacation with Friends"
                  },
                  label_html: {
                    class: "fform-label fw-semibold small text-uppercase text-muted",
                    style: "font-family: 'Poppins', sans-serif; font-weight: 500;"
                  } %>
              </div>

              <div class="col-md-6">
                <%= form.input :destination,
                  wrapper_html: { class: "mb-3" },
                  input_html: {
                    class: "form-control-lg",
                    style: "font-family: 'DM Sans', sans-serif;",
                    placeholder: "e.g.: Bali"
                  },
                  label_html: {
                    class: "form-label fw-semibold small text-uppercase text-muted",
                    style: "font-family: 'Poppins', sans-serif; font-weight: 500;"
                  } %>
              </div>

              <div class="col-md-6">
                <%= form.input :country,
                  as: :string,
                  wrapper_html: { class: "mb-3" },
                  input_html: {
                    class: "form-control-lg",
                    style: "font-family: 'DM Sans', sans-serif;",
                    placeholder: "e.g.: Indonesia"
                  },
                  label_html: {
                    class: "form-label fw-semibold small text-uppercase text-muted",
                    style: "font-family: 'Poppins', sans-serif; font-weight: 500;"
                  } %>
              </div>

              <div class="col-md-6">
                <%= form.input :accommodation_type,
                  as: :select,
                  collection: Trip::ACCOMMODATION_OPTIONS.map { |opt| [opt.humanize, opt] },
                  prompt: "Select Accommodation",
                  wrapper_html: { class: "mb-3" },
                  input_html: {
                    class: "form-control-lg",
                    style: "font-family: 'DM Sans', sans-serif;",
                  },
                  label_html: {
                    class: "form-label fw-semibold small text-uppercase text-muted",
                    style: "font-family: 'Poppins', sans-serif; font-weight: 500;"
                  } %>
              </div>

              <div class="col-md-6">
                <%= form.input :start_date,
                  as: :date,
                  html5: true,
                  wrapper_html: { class: "mb-3" },
                  input_html: {
                    class: "form-control-lg",
                    style: "font-family: 'DM Sans', sans-serif;"
                  },
                  label_html: {
                    class: "form-label fw-semibold small text-uppercase text-muted",
                    style: "font-family: 'Poppins', sans-serif; font-weight: 500;"
                  } %>
              </div>

              <div class="col-md-6">
                <%= form.input :end_date,
                  as: :date,
                  html5: true,
                  wrapper_html: { class: "mb-3" },
                  input_html: {
                    class: "form-control-lg",
                    style: "font-family: 'DM Sans', sans-serif;"
                  },
                  label_html: {
                    class: "form-label fw-semibold small text-uppercase text-muted",
                    style: "font-family: 'Poppins', sans-serif; font-weight: 500;"
                  } %>
              </div>

              <div class="col-md-6">
                <%= form.input :cover_image,
                  as: :file,
                  wrapper_html: { class: "mb-3" },
                  input_html: {
                    class: "form-control-lg",
                    style: "font-family: 'DM Sans', sans-serif;"
                  },
                  label: "Cover Image",
                  label_html: {
                    class: "form-label fw-semibold small text-uppercase text-muted",
                    style: "font-family: 'Poppins', sans-serif; font-weight: 500;"
                  } %>
              </div>
               <div class="col-md-6">
                    <div class="form-check m-0">
                       <%= form.check_box :public, {}, false, true %>

                      <label class="form-check-label" for="trip_privacy">
                        Keep my trip private
                      </label>

                    <small class="text-muted" data-privacy-checkbox-target="status">
                      <%= "Currently visible to everyone"%>
                    </small>
                   </div>

                  </div>
              </div>
            </div>

            <div class="form-actions mt-4 d-flex justify-content-between">
              <%= link_to "Cancel", trips_path, class: "btn cancel-button px-4", style: "font-family: 'DM Sans', sans-serif;" %>
              <%= form.submit "Create Trip", class: "btn btn-home-primary-cta px-4", style: "font-family: 'DM Sans', sans-serif;" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
