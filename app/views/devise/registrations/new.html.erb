<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2 class="auth-title">Join Pakka</h2>
      <p class="auth-subtitle">Start organizing your travel checklists</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="row">
          <div class="col-md-6">
            <%= f.input :first_name,
                        required: true,
                        wrapper_html: { class: "form-group" },
                        input_html: {
                          class: "form-control pakka-input",
                          placeholder: "First name"
                        },
                        label_html: { class: "form-label" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :last_name,
                        required: true,
                        wrapper_html: { class: "form-group" },
                        input_html: {
                          class: "form-control pakka-input",
                          placeholder: "Last name"
                        },
                        label_html: { class: "form-label" } %>
          </div>
        </div>

        <%= f.input :email,
                    required: true,
                    wrapper_html: { class: "form-group" },
                    input_html: {
                      class: "form-control pakka-input",
                      autocomplete: "email",
                      placeholder: "Email address"
                    },
                    label_html: { class: "form-label" } %>

        <%= f.input :password,
                    required: true,
                    wrapper_html: { class: "form-group" },
                    input_html: {
                      class: "form-control pakka-input",
                      autocomplete: "new-password",
                      placeholder: "Create password"
                    },
                    label_html: { class: "form-label" },
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>

        <%= f.input :password_confirmation,
                    required: true,
                    wrapper_html: { class: "form-group" },
                    input_html: {
                      class: "form-control pakka-input",
                      autocomplete: "new-password",
                      placeholder: "Confirm password"
                    },
                    label_html: { class: "form-label" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-primary-cta w-100" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
