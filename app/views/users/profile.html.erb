  <!-- ğŸ§‘â€ğŸ¦° PROFILE HEADER SECTION -->
  <section class="profile-header">
  <div class="container px-5" style="max-width: 800px;">
    <div class="text-white text-center">
      <h1 class="fw-bold mb-2" style="font-family: Poppins, sans-serif;">Hi <%= current_user.first_name %> ğŸ‘‹</h1>

      <div class="d-flex justify-content-center">
        <div class="avatar-container position-relative">
          <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key, class: "rounded-circle shadow-sm profile-avatar", alt: "Profile picture" %>
          <% else %>
            <div class="rounded-circle bg-light text-primary d-flex align-items-center justify-content-center shadow-sm profile-avatar-fallback">
              <%= current_user.first_name.first.upcase %>
            </div>
          <% end %>

          <div class="avatar-overlay d-flex align-items-center justify-content-center">
            <%= form_with model: current_user,
                          url: user_registration_path,
                          method: :patch,
                          local: true,
                          html: { multipart: true, class: "avatar-upload-form" } do |f| %>
              <%= f.file_field :avatar,
                    class: "d-none",
                    id: "avatar-upload",
                    onchange: "this.form.submit()" %>
              <label for="avatar-upload" class="btn btn-light m-0 p-2">
                <i class="fas fa-camera"></i>
              </label>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="profile-container px-5 px-md-6">
  <!-- ğŸ“Š STATS CARDS SECTION -->
  <section class="stats-section my-5 my-md-6 py-5">
    <div class="mx-auto" style="max-width: 1200px;">
      <h2 class="w-bold mb-5 display-6 pakka-green" style="font-family: Poppins, sans-serif;">Your Travel Stats</h2>

      <div class="row m-0 g-4">
        <div class="col-md-4">
          <div class="card shadow-sm rounded-4 p-4 p-lg-5 h-100">
            <h5 class="fw-bold mb-3 display-7" style="font-family: Poppins, sans-serif;">ğŸ§­ Total Trips</h5>
            <p class="display-6 fw-bold text-success mb-0" style="font-family: DM Sans, sans-serif;">
              <%= @past_trips&.count || "No trips yetâ€”adventure awaits!" %>
            </p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card shadow-sm rounded-4 p-4 p-lg-5 h-100">
            <h5 class="fw-bold mb-3 display-7" style="font-family: Poppins, sans-serif;">ğŸ“ Favorite Destination</h5>
            <p class="display-6 fw-bold text-primary mb-0" style="font-family: DM Sans, sans-serif;">
              <%= current_user.favorite_destination || "Where to next? Save your top spot" %>
            </p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card shadow-sm rounded-4 p-4 p-lg-5 h-100">
            <h5 class="fw-bold mb-3 display-7" style="font-family: Poppins, sans-serif;">ğŸ“… Last Trip</h5>
            <p class="display-6 fw-bold text-muted mb-0" style="font-family: DM Sans, sans-serif;">
              <%= @past_trips&.first&.created_at&.strftime("%B %Y") || "Your first checklist starts here" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ğŸ§³ Trip Content Section -->
  <section class="trip-content py-6">
    <div class="row justify-content-center">
      <!-- Checklist Column -->
      <div class="col-12 col-lg-11 col-xl-10">
        <div class="checklist-card card shadow-sm rounded-4 border-0 mb-4">
          <div class="card-header bg-white rounded-top-4">
            <h2 class="h2 mb-0">ğŸ§³ Packing Essentials</h2>
          </div>
          <div class="card-body">
            <!-- Add Item Form -->
            <div class="add-item-form mb-4">
              <h3 class="h5 mb-3">Add a checklist item</h3>
              <%= form_with model: @item, url: items_path, local: true, class: "add-item-form" do |f| %>
                <div class="row g-3 align-items-end">
                  <div class="col-md-6">
                    <%= f.label :name, "Create custom item", class: "form-label fw-semibold" %>
                    <%= f.text_field :name, class: "form-control", placeholder: "e.g. Sunglasses", style: "border-radius: 10px;" %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :category, "Select item category", class: "form-label d-block fw-semibold" %>
                    <%= f.select :category, Item::CATEGORIES.map { |cat| [cat.humanize, cat] },
                        { prompt: "Select" },
                        { class: "form-select custom-pakka-select", style: "border-radius: 10px;" } %>
                  </div>
                  <div class="col-12">
                    <%= f.submit "Add Item", class: "btn btn-secondary-cta" %>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Checklist Items -->
            <% if @items.any? %>
              <% grouped_items = @items.group_by { |item| item.category } %>

              <ul class="checklist-items list-group list-group-flush">
                <% grouped_items.each do |category, items| %>
                  <li class="list-group-item bg-light fw-semibold mt-4" style="font-family: 'DM Sans', sans-serif;">
                    <h5 class="mb-2 pakka-blue"><%= category.humanize %></h5>
                  </li>

                  <% items.each do |item| %>
                    <li class="list-group-item d-flex align-items-center" id="item_<%= item.id %>">
                      <div class="form-check flex-grow-1" data-controller="inline-edit" data-inline-edit-item-id-value="<%= item.id %>">
                        <!-- Display version -->
                        <div data-inline-edit-target="display" class="d-flex align-items-center">
                          <%= render "items/item", item: item %>
                        </div>

                        <!-- Inline-edit form -->
                        <div data-inline-edit-target="form" class="d-none">
                          <%= render "items/edit", item: item %>
                        </div>
                      </div>
                    </li>
                  <% end %>
                <% end %>
              </ul>
            <% else %>
              <p class="text-muted">No items added yet. Start building your packing list!</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
