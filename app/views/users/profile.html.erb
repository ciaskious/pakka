<h1>My Reusable Items</h1>

<%= form_with model: @item, url: items_path, local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>
  <%= f.submit "Add Item" %>
<% end %>

<ul>
  <% @items.each do |item| %>
    <li>
      <%= item.name %> (Category: <%= item.category %>)
      <%= button_to "Delete", item_path(item), method: :delete, data: { confirm: "Sure?" } %>
    </li>
  <% end %>
</ul>
